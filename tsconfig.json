{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/server/",
    "preserveConstEnums": true,
    "removeComments": true,
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["./src/server/**/*", "./src/shared/**/*"]
}
